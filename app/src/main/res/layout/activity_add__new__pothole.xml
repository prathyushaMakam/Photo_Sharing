<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.prathyusha.photosharing.Add_New_Pothole">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/DisplayPhoto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/camera_image"
        android:onClick="PhotoButton"/>

    <TextView android:id="@+id/PhotoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Click on above Image to take a Photo"
        android:layout_below="@+id/DisplayPhoto"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"></TextView>
   <!-- <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GPSButton"
        android:text="Get the Location"
        android:layout_below="@+id/PhotoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="GPSButton"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PhotoInfoText"
        android:text="Info about Pothole: "
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/PhotoText"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PotholeInfo"
        android:layout_below="@+id/PhotoInfoText"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UploadButton"
        android:text="Upload"
        android:layout_below="@+id/PotholeInfo"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:onClick="UploadButton"/>


</RelativeLayout>
